FROM sider/devon_rex_base:2.7.0

USER root
ARG MISSPELL_VERSION=0.3.4
RUN curl -sSL https://git.io/misspell -o install-misspell && \
    chmod +x install-misspell && \
    ./install-misspell -b /usr/local/bin "v${MISSPELL_VERSION}" && \
    rm install-misspell && \
    misspell -v

